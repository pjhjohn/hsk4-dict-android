<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="5"
    android:background="@color/white">
    <Button
        android:id="@+id/card_item_search"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="@string/card_item_search_text"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/md_indigo_800"
        android:elevation="@dimen/baseline_x1"/>
    <TextView
        android:id="@+id/card_item_word"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/md_indigo_700"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/card_item_pronunciation"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/md_indigo_600"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/card_item_word_type"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/md_indigo_500"
        android:visibility="invisible"/>
    <TextView
        android:id="@+id/card_item_meaning"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/md_indigo_400"
        android:visibility="invisible"/>
</LinearLayout>