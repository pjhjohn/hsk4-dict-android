<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/card_item_word"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/white"
        android:background="#f06292"/>
    <TextView
        android:id="@+id/card_item_pronunciation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_item_word"
        android:textColor="@color/white"
        android:background="#ec407A"/>
    <TextView
        android:id="@+id/card_item_word_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_item_pronunciation"
        android:textColor="@color/white"
        android:background="#E91e63"/>
    <TextView
        android:id="@+id/card_item_meaning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_item_word_type"
        android:textColor="@color/white"
        android:background="#d81b60"/>
</RelativeLayout>