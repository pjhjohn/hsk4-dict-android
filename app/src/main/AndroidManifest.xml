<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.hsk4dictionary.android">
    <!--Normal Permissions-->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <!--Danger Permissions-->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>

    <application
        android:name="com.hsk4dictionary.android.HSK4DictionaryApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Playting.Theme.Base"
        android:screenOrientation="portrait">

        <activity android:name="com.hsk4dictionary.android.activity.MenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.hsk4dictionary.android.activity.MainActivity">
        </activity>

        <activity android:name="com.hsk4dictionary.android.activity.BookmarkActivity">
        </activity>
    </application>
</manifest>