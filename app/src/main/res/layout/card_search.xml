<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/card_search_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:labelFor="@+id/card_search_id"
        android:text="@string/card_search_label_text"/>
    <Button
        android:id="@+id/card_search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_search_label"
        android:layout_alignParentEnd="true"
        android:text="@string/card_search_button_text"/>
    <EditText
        android:id="@+id/card_search_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/card_search_label"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/card_search_button"
        android:inputType="number"/>
</RelativeLayout>